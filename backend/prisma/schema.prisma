generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SQL_DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String
  role  Role
  status String
  passwordHash String

  //Separate relations for created and updated turbines
  turbinesCreated Turbine[] @relation("TurbineCreatedBy")
  turbinesUpdated Turbine[] @relation("TurbineUpdatedBy")

  //Separate relations for create and updated turbines
  inpsectionCreated Inspection[] @relation("InspectionCreatedBy")
  inspectionUpdated Inspection[] @relation("InspectionUpdatedBy")
  inspectionUser    Inspection[] @relation("InspectionUserId")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  ENGINEER
  VIEWER
}

model Turbine {
  id         String   @id @default(cuid())
  name       String
  manufacturer String?
  mwRating   Float?
  lat        Float?
  lng        Float?
  inspections Inspection[]
  status     String

  creator       User?     @relation("TurbineCreatedBy", fields: [createdBy], references: [id]) 
  updater       User?     @relation("TurbineUpdatedBy", fields: [updatedBy], references: [id]) 

  createdBy  String?
  updatedBy  String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Inspection {
  id            String   @id @default(cuid())
  date          DateTime

  inspector     User   @relation("InspectionUserId", fields: [inspectorId], references: [id])
  inspectorId   String

  dataSource    DataSource
  status        String     @default("ACTIVE")
  rawPackageUrl String?
  turbine       Turbine  @relation(fields: [turbineId], references: [id])
  turbineId     String
  findings      Finding[]
  repairPlan    RepairPlan?

  creator       User?     @relation("InspectionCreatedBy", fields: [createdBy], references: [id]) 
  updater       User?     @relation("InspectionUpdatedBy", fields: [updatedBy], references: [id]) 

  createdBy  String?
  updatedBy  String?

  createdAt     DateTime @default(now())

  @@unique([turbineId, date])
}

enum DataSource {
  DRONE
  MANUAL
}

model Finding {
  id            String   @id @default(cuid())
  category      FindingCategory
  severity      Int
  estimatedCost Float
  notes         String?
  inspection    Inspection @relation(fields: [inspectionId], references: [id])
  inspectionId  String
  createdAt     DateTime @default(now())

  @@index([inspectionId])
}

enum FindingCategory {
  BLADE_DAMAGE
  LIGHTNING
  EROSION
  UNKNOWN
}

model RepairPlan {
  id                 String   @id @default(cuid())
  inspection         Inspection @relation(fields: [inspectionId], references: [id])
  inspectionId       String   @unique
  priority           Priority
  totalEstimatedCost Float
  snapshotJson       Json
  createdAt          DateTime @default(now())
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
